<Window x:Class="ThLaunchSite.EditVpatchIniDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThLaunchSite"
        mc:Ignorable="d"
        Title="{Binding Resources.TitleVpatchIniEditor, Mode=OneWay, Source={x:Static local:ResourceService.Current}}" Height="379" Width="432" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterOwner" WindowStyle="ToolWindow">
    <Grid>
        <TextBox x:Name="EditorBox" Text="" Margin="0,0,0,24"
                 HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"
                 AcceptsReturn="True"/>
        <Button x:Name="SaveButton" Content="{Binding Resources.ButtonSave, Mode=OneWay, Source={x:Static local:ResourceService.Current}}"
                Width="90" Height="24"
                HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="SaveButtonClick"/>

    </Grid>
</Window>
